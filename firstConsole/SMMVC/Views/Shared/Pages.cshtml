@model BaseSearch
@using SMModels
@{



    BaseSearch baseSearch = Model as BaseSearch;

}

 

        <div class="dataTable-bottom">
            <select asp-for="Page.RowCount"   onchange="getRowCount(this.value)">
                <option value="10">10</option>
                <option value="20">20</option>
                <option value="50">50</option>
                <option value="99999">All</option>
            </select>
            <div class="dataTable-info">Showing <span>@baseSearch.Page.CurrentRowStart</span> to <span>@baseSearch.Page.CurrentRowEnd</span> of <span>@baseSearch.Page.TotalRows</span> entries</div>
            <ul class="pagination pagination-primary float-end dataTable-pagination">
               
                <li class="page-item pager"><a href="#" onclick="getPage(1)" class="page-link" data-page="1">‹</a></li>
                @for (var i = 1; i <= baseSearch.Page.TotalPages && i< baseSearch.Page.CurrentPage +5; i++)
                {
                    if (baseSearch.Page.CurrentPage == i)
                    {
                        <li class="page-item active"><a href="#" onclick="getPage(@i)"  class="page-link" data-page="@i">@i</a></li>
                    }
                    else
                    {
                        <li class="page-item"><a href="#" onclick="getPage(@i)" class="page-link" data-page="@i">@i</a></li>
                    }
                }
                <li class="page-item pager"><a href="#" onclick="getPage(@baseSearch.Page.TotalPages)"  class="page-link" data-page="2">›</a></li>
            </ul>
        </div>

    
