@model List<SMEntities.Student>
@using SMModels
@{

    StudentSearch studentSearch = ViewBag.studentSearch as StudentSearch;

}

       <table class="table table-striped" id="table1">
            <thead>
                <tr>
                    <th>Edit</th>
                    <th>Delete</th>
                    <th><a href="/student/List?columnName=id&orderBy=@ViewBag.orderBy" onclick="getOrderBy('id', '@ViewBag.orderBy')">Id</a> </th>
                    <th><a href="/student/List?columnName=FirstName&orderBy=@ViewBag.orderBy" onclick="getOrderBy('FirstName', '@ViewBag.orderBy')">First Name</a></th>
                    <th><a href="/student/List?columnName=LastName&orderBy=@ViewBag.orderBy" onclick="getOrderBy('LastName', '@ViewBag.orderBy')">Last Name </a></th>
                    <th><a href="/student/List?columnName=LastName&orderBy=@ViewBag.orderBy" onclick="getOrderBy('Subjects.Name', '@ViewBag.orderBy')">Subject</a></th>

                    <th>Doj</th>
                    <th>Age</th>
                    <th>Fees</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                <tr>
                    <td> <a href="/student/edit/@item.Id">Edit</a> </td>
                    <td> <a href="/student/Delete/@item.Id">Delete</a> </td>
                    <td>@item.Id</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Subjects?.Name</td>
                    <td>
                        @item.Doj
                    </td>
                    <td>
                        @if (item.Age > 25 && item.Age < 35)
                        {
                            <span style="color:red"> @item.Age</span>
                        }
                        else
                        {
                            <span style="color:blue"> @item.Age</span>
                        }


                    </td>
                    <td>
                        @item.Fees
                    </td>
                </tr>

                }
            </tbody>
        </table>

       @Html.Partial("Pages",studentSearch)



