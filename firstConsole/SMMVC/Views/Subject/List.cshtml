@{
}

@model List<SMEntities.Subject>

<div class="card">
    <div class="card-header">
        Simple Datatable
    </div>
    <div class="card-body">

        <form action="/Subject/list" method="post">
            <div> <label>First Name </label> <input type="text" name="NameText" /></div>

           

            <button type="submit" >Search</button>
        </form>
        </div>
        <div class="card-body">
            <table class="table table-striped" id="table1">
                <thead>
                    <tr>
                        <th><a href="/Subject/List?columnName=guid&orderBy=@ViewBag.orderBy">Id</a> </th>
                        <th><a href="/Subject/List?columnName=name&orderBy=@ViewBag.orderBy">Name</a></th>
                       
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
